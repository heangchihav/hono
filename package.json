  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "pg": "^8.16.0",
    "postgres": "^3.4.7",
    "zod": "^3.25.57"
  }
}
